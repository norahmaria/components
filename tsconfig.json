{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "types": ["@testing-library/jest-dom"]
  },
  "include": ["declarations.d.ts", "src/**/*"],
  "exclude": ["node_modules", "build"]
}
